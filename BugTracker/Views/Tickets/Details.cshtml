@model BugTracker.Models.Classes.Tickets

@{
    ViewBag.Title = "Details";
}
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#Table').DataTable();
        });
    </script>
}

<h2>Details</h2>

<div>
    <h4>Tickets</h4>
    <hr />
    <dl class="dl-horizontal">
        @*<dt>
                @Html.DisplayNameFor(model => model.Assignee.Name)
            </dt>*@

        <dd>
            @Html.DisplayFor(model => model.Assignee.Name)
        </dd>

        @*<dt>
                @Html.DisplayNameFor(model => model.Creator.Name)
            </dt>*@

        <dd>
            @Html.DisplayFor(model => model.Creator.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Project)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Project.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TicketPriority)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TicketPriority.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TicketStatus)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TicketStatus.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TicketType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TicketType.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Created)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Created)
        </dd>

        @*<dt>
                @Html.DisplayNameFor(model => model.Updated)
            </dt>*@

        <dd>
            @Html.DisplayFor(model => model.Updated)
        </dd>

    </dl>

    <div>
        @foreach (var comment in Model.Comments)
        {
            <hr />
            @comment.User.Name
            <p style="text-align: left; margin-left: 70px">
                @comment.Comment
                <span style="font-size: 10px; text-align: right">
                    - @comment.Created.ToString("dd/mm/yyyy hh:mm")
                </span>
            </p>
        }
    </div>
    <div>
        @using (Html.BeginForm("CreateComment", "Tickets", new { id = Model.Id }, FormMethod.Post))
        {
            <input type="hidden" name="slug" value="@Model.Comments" />
            <textarea name="Body"></textarea>
            if (ViewBag.ErrorMessage != null)
            {
                <span>@ViewBag.ErrorMessage</span>
            }
            <input type="submit" value="submit" />
        }
    </div>

    <div>
        @foreach (var attachment in Model.Attachments)
        {
            <hr />
            @attachment.User.Name
            <div style="text-align: left; margin-left: 70px; width: 300px;">
                <img class="img-responsive" src="@attachment.FilePath" alt="">
                <span style="font-size: 10px; text-align: right">
                    - @attachment.Created.ToString("dd/mm/yyyy hh:mm")
                </span>
            </div>
        }
    </div>
    <div>
        @using (Html.BeginForm("CreateAttachment", "Tickets", new { Id = Model.Id }, FormMethod.Post, new { enctype = "Multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <input name="image" type="file" class="form-control" id="fileUpload" />
            if (ViewBag.ErrorMessage != null)
            {
                <span>@ViewBag.ErrorMessage</span>
            }
            <input type="submit" value="submit" />
        }
    </div>

    <div>
        <div class="col-md-6">
            <h2>Ticket Histories</h2>
            <table id="Table">
                <thead>
                    <tr>
                        <th>Property Type</th>
                        <th>Date Modified</th>
                        <th>New Value</th>
                        <th>Old Value</th>
                        <th>User Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var history in Model.Histories)
                    {
                        <tr>
                            <td>@history.Property</td>
                            <td>@history.Changed</td>
                            <td>@history.NewValue</td>
                            <td>@history.OldValue</td>
                            <td>@history.User.Name</td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
