@model IEnumerable<BugTracker.Models.Classes.Tickets>

@{
    ViewBag.Title = "Index";
}

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#wer').DataTable();
        });
    </script>
}
<h2>Index</h2>

@if (User.IsInRole("Submitter"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table id="wer" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Assignee.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Creator.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketPriority.Name)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.TicketStatus.Name)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.TicketType.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Assignee.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Creator.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Project.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketPriority.Name)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.TicketStatus.Name)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.TicketType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Updated)
                </td>
                @if (User.Identity.IsAuthenticated && !string.IsNullOrWhiteSpace(ViewBag.User))
                {
                    if (User.IsInRole("Developer"))
                    {
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        </td>
                    }
                }
                @if (User.IsInRole("Project Manager"))
                {
                    @Html.ActionLink("AssignDeveloper", "AssignDeveloper", new { ticketId = item.Id })
                }
            </tr>
        }
    </tbody>

</table>